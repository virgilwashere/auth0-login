{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/bash"
        }
      },
      "command": "make build",
      "group": {
        "kind": "build",
        "isDefault": true,
      },
    },
    {
      "label": "make test",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/bash"
        },
      },
      "command": "make test",
      "group": {
        "kind": "test",
        "isDefault": true,
      },
    }
  ]
}
